<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <com.mtsealove.github.food_delivery.Design.TitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </com.mtsealove.github.food_delivery.Design.TitleView>

        <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">

                <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_gravity="center_vertical"
                                                   android:layout_marginTop="20dp"
                                                   android:layout_marginHorizontal="15dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:layout_margin="10dp"
                                  android:orientation="horizontal">

                        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                                     android:id="@+id/loadPb"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/addressTv"
                                  android:text="현재 위치: 서울시 광진구 아차산로 55길 43"
                                  android:textSize="18sp"
                                  android:textColor="@color/black"
                                  android:clickable="false"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <!--grid처럼 사용-->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:layout_margin="10dp"
                                  android:orientation="vertical">

                        <!--1열-->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                      android:orientation="horizontal">

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/korean"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"

                                           android:src="@drawable/bibimbap"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="한식"
                                          android:textColor="@color/black"
                                          android:clickable="false"

                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/western"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"
                                           android:src="@drawable/meat"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="양식"
                                          android:textColor="@color/black"
                                          android:clickable="false"
                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/chinese"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"
                                           android:src="@drawable/ramen"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="중식"
                                          android:textColor="@color/black"
                                          android:clickable="false"
                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                        </LinearLayout>

                        <!--2열-->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                      android:layout_marginTop="10dp"
                                      android:orientation="horizontal">

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/fish"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"
                                           android:src="@drawable/fish"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="회/일식"
                                          android:textColor="@color/black"
                                          android:clickable="false"
                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/chicken"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"
                                           android:src="@drawable/turkey"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="치킨"
                                          android:textColor="@color/black"
                                          android:clickable="false"
                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/burger"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"
                                           android:src="@drawable/burger"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="햄버거"
                                          android:textColor="@color/black"
                                          android:clickable="false"
                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                        </LinearLayout>

                        <!--3열-->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                      android:layout_marginTop="10dp"
                                      android:orientation="horizontal">

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/lunch_box"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"
                                           android:src="@drawable/lunch_box"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="도시락"
                                          android:textColor="@color/black"
                                          android:clickable="false"
                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/coffee"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"
                                           android:src="@drawable/coffee"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="커피/음료"
                                          android:textColor="@color/black"
                                          android:clickable="false"
                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                                          android:id="@+id/dessert"
                                          android:clickable="true"
                                          android:layout_weight="1"
                                          android:gravity="center_horizontal"
                                          android:orientation="vertical">

                                <ImageView android:layout_width="55dp" android:layout_height="55dp"
                                           android:clickable="false"
                                           android:src="@drawable/cake"/>

                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:text="디저트"
                                          android:textColor="@color/black"
                                          android:clickable="false"
                                          android:textSize="16sp"
                                          android:layout_marginTop="5dp"
                                />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginHorizontal="15dp"
                                                   android:layout_marginTop="20dp">

                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                    android:paddingVertical="5dp">
                        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:padding="5dp"
                                  android:background="@color/trans"
                                  android:layout_toLeftOf="@id/icon_search"
                                  android:hint="메뉴 검색하기"
                                  android:id="@+id/searchEt"/>

                        <ImageView android:layout_width="25dp" android:layout_height="25sp"
                                   android:layout_marginRight="10dp"
                                   android:layout_alignParentRight="true"
                                   android:layout_centerVertical="true"
                                   android:src="@drawable/icon_search"
                                   android:id="@+id/icon_search"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.mtsealove.github.food_delivery.Design.DrawerView
            android:layout_width="300dp" android:layout_height="match_parent"
            android:layout_gravity="start"
    >
    </com.mtsealove.github.food_delivery.Design.DrawerView>

</androidx.drawerlayout.widget.DrawerLayout>