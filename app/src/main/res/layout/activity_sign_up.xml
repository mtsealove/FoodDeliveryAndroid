<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_fresh_mobile"
        android:padding="15dp"
        tools:context=".SignUpActivity">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:padding="10dp"
                      android:background="@drawable/trans_back"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="24sp"
                      android:textColor="@color/black"
                      android:text="회원가입"
                      android:textStyle="bold" />
            
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:inputType="text"
                      android:layout_marginTop="25dp"
                      android:id="@+id/idEt"
                      android:hint="ID"
                      android:textSize="18sp"
                      android:padding="5dp"
                      android:background="@color/trans" />

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:layout_marginBottom="25dp"
                  android:background="@color/blue" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:visibility="gone"
                      android:id="@+id/existTv"
                      android:layout_marginTop="-20dp"
                      android:textColor="@color/red"
                      android:text="사용중인 아이디입니다"
                      android:textSize="17sp" />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:visibility="gone"
                      android:id="@+id/notExistTv"
                      android:layout_marginTop="-20dp"
                      android:textColor="@color/blue"
                      android:text="사용 가능한 아이디입니다"
                      android:textSize="17sp" />

            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:inputType="text"
                      android:id="@+id/nameEt"
                      android:hint="이름"
                      android:textSize="18sp"
                      android:padding="5dp"
                      android:background="@color/trans" />

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/blue" />
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:inputType="textPassword"
                      android:layout_marginTop="25dp"
                      android:id="@+id/pwEt"
                      android:hint="비밀번호"
                      android:textSize="18sp"
                      android:padding="5dp"
                      android:background="@color/trans" />

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/blue" />
            <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:inputType="textPassword"
                      android:layout_marginTop="25dp"
                      android:id="@+id/pwConfirmEt"
                      android:hint="비밀번호 확인"
                      android:textSize="18sp"
                      android:padding="5dp"
                      android:background="@color/trans" />

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:background="@color/blue" />

            <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/confirmBtn"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:text="확인"
                    android:background="@drawable/btn_green"
                    android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>